{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "constraints": {
    "go": "1.21"
  },
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    "flagd/**",
    "flagd-proxy/**",
    "core/**",
    "test/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    }
  ]
}
